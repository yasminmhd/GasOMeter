<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <!-- Top App Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFC107"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fuel Cost Prediction"
                android:textColor="#000000"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/backIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Content with padding -->
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/car"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:src="@drawable/car"
            android:scaleType="fitStart"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Distance Input -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/distanceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter distance"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:paddingEnd="100dp"
                android:paddingRight="50dp"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/ic_distance"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                android:textColorHint="#888888"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="KM"
                android:textColor="#888888"
                android:textSize="16sp"
                android:gravity="center_vertical|end"
                android:layout_gravity="end"
                android:paddingEnd="16dp"/>
        </FrameLayout>

        <!-- Fuel Price Input -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <EditText
                android:id="@+id/fuelPriceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter fuel price"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="100dp"
                android:paddingRight="50dp"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:drawableStart="@drawable/ic_fuel"
                android:drawablePadding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="RM/L"
                android:textColor="#888888"
                android:textSize="16sp"
                android:gravity="center_vertical|end"
                android:layout_gravity="end"
                android:paddingEnd="16dp"/>
        </FrameLayout>

        <!-- Car Selection -->
        <!-- Vehicle Type Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose vehicle type"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/vehicleTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_bg"
            android:prompt="@string/vehicle_type_prompt" />

        <!-- Car Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose car"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/carSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_bg"
            android:prompt="@string/car_prompt"
            android:layout_marginBottom="20dp" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/calcButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFC107"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/calculatebutton"
            android:textColor="#000000" />

        <!-- Result Output -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginHorizontal="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="15dp"
                android:text="ðŸš— Result will appear here"
                android:textColor="#000000"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
